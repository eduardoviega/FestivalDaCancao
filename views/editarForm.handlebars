{{#each validaNaPagina}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h2>Editando Computador:</h2>
<div class="card">
    <div class="card-body">
        <form action="/ediReq/{{idComputador}}" method="post">
            <div class="mb-3">
                <label class="form-label">Descrição:</label>
                <input class="form-control" type="text" name="descricao" required="required" maxlength="50" value="{{pcDescricao}}">
            </div>
            <div class="mb-3">
                <label class="form-label">Marca:</label>
                <input class="form-control" type="text" name="marca" required="required" maxlength="25" value="{{pcMarca}}">
            </div>
            <div class="mb-3">
                <label class="form-label">Memória RAM:</label>
                <input class="form-control" type="text" name="memoriaRam" required="required" maxlength="8" value="{{pcMemoriaRam}}">
            </div>
        
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a href="/"><button type="button" class="btn btn-danger">Voltar</button></a>
        </form>
    </div>
</div>